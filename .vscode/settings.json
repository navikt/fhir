{
    "files.exclude": {
        "**/build": true,
        ".idea": true,
        ".gradle": true,
        "gradle": true,
        "gradlew": true,
        "gradlew.bat": true,
        "package-cache": true,
        "igs/*/input-cache": true,
        "igs/*/temp": true,
        "igs/*/template": true,
        "igs/*/*.jar": true
    },
    "json.schemas": [
        {
            // The schema provides IntelliSense when editing json files containing fhir resources (e.g. StructureDefinition). 
            "fileMatch": [
                "igs/*/input/*/*.json",
                "igs/*/src/test/resources/**/*.json",
            ],
            "url": "https://www.hl7.org/fhir/fhir.schema.json"
        }
    ],
    "editor.tabSize": 2,
    "files.eol": "\n"
}